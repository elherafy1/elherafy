<%= provide(:title, "Edit Worker")%>
<h1>Update Worker's Profile</h1>


<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-sm-5">
          </div>
          <div class="col-sm-7">
            <%= form_for @worker do |f| %>
                 <%= render 'shared/error_messages', object: f.object %>
                
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, :class =>"form-control" %>
                </div>
                <div class="form-group">
                 <%= f.label :area %>
                  <%= f.text_field :area, :class =>"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :status %>
                  <%= f.text_field :status, :class =>"form-control" %>
                </div>
                
                <%= f.submit  "Save changes", :class => "btn btn-primary" %>
                
              <% end %>
          </div>
        </div>

      </div>
</div>
