<div class="jumbotron">
      <div class="container">
        <%= provide(:title, "Edit Worker")%>
        <h1>Update Worker's Profile</h1>
        <div class="row">
          <div class="col-sm-8">
            <%= form_for @worker do |f| %>
                 <%= render 'shared/error_messages', object: f.object %>
                
                <div class="form-group">
                  <%= f.label :name %><br>
                  <%= f.text_field :name %>
                <div class="field">
                  <%= f.label :phone %><br>
                  <%= f.text_field :phone %>
                </div>
                <div class="field">
                  <%= f.label :area %><br>
                  <%= f.select :area, options_for_select([['cairo','Cairo'],['giza', 'Giza']])%>

                </div>
                <div class="field">
                  <%= f.label :status %><br>
                  <%= f.select :status, options_for_select([['Available','Available'],['Busy', 'Busy']])%>
                </div>
                <div class="field">
                  <%= f.label :kind %><br>
                  <%= f.select :kind, options_for_select([['naggar','naggar'],['mabalat', 'mabalat'],['sabak', 'sabak']])%>
                </div>
                
                <%= f.submit  "Save changes", :class => "btn btn-primary" %>
                
              <% end %>
          </div>
        </div>

      </div>
</div>

