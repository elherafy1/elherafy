<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <b> يوجد نقص بالبيانات: <%= pluralize(object.errors.count, "خطء") %> </b>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>