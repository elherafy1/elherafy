<div class="col-sm-12">
 <div id="myCarousel" class="carousel slide" data-ride="carousel">

      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <% @jobs.each do |job| %>
        <div class="item <%= 'active' if job == Job.first %>">

          

          <img src="data:image/gif;base64,R0lGODlhAQABAIAAAGZmZgAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
          <h1><%= Job.max_mabalat(job.name).name %></h1>

              <% if Job.max_mabalat(job.name).average_rate > 20 %>
                <td><img src="http://www.clker.com/cliparts/Z/X/M/T/C/s/led-circle-green-md.png" width="80" height="80"></td>
              <% elsif Job.max_mabalat(job.name).average_rate > 15 && Job.max_mabalat(job.name).average_rate <= 20%>
                <td><img src="http://www.clker.com/cliparts/z/Y/Q/v/w/e/led-circle-yellow-md.png" width="80" height="80"></td>
              <% elsif Job.max_mabalat(job.name).average_rate > 10 && Job.max_mabalat(job.name).average_rate <= 15 %>
                <td><img src="http://www.clker.com/cliparts/6/y/a/i/z/9/led-circle-orange-md.png" width="80" height="80"></td>
              <% else %>
                <td><img src="http://www.clker.com/cliparts/T/t/g/p/t/5/led-circle-red-md.png" width="80" height="80"></td>            
              <% end %>

              
              <p>
              <%= render 'elherafy/home', :worker => Job.max_mabalat(job.name)%>
              </p><br>              
              <p></p>
              <p><strong style="font-size:30px;">مبلط</strong></p>
              <p><a <%= link_to 'مزيد من المعلومات', Job.max_mabalat(job.name) , :style => "color:black;", :class => "btn btn-primary"%></a></p>
            </div>
          </div>
        </div>
        <% end %>  
      </div>

      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="sr-only">Next</span>
      </a>
    
  </div>


<div class="jumbotron">
      <div class="container">
  <div class="row">
    

<% @jobs.each do |job| %>
<div class="col-sm-4">
      <li class="list-group-item list-group-item-info" style="font-size:35px;"  align="center" dir="rtl"><%= job.name %></li>

    <%= link_to (image_tag job.picture, :height=>"300", :style => "width:100%"), job %>
</div>
<% end %> 
  

  </div>
  </div>


      </div>


    </div>
  </div>
</div>
