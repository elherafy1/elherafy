<div class="jumbotron">
      <div class="container" dir="rtl">
        <div class="row">
        	<p>
        	<h1 dir="rtl" lang="ar" style = "color:green; font-size:50px;">تحديث بيانات المهنه</h1>
        	</p>
			<div class="col-sm-12">
				<%= form_for @job do |f| %>

			    <div class="field">
			    <p dir="rtl" lang="ar">
			      <%= f.label :الاسم %><br>
			      </p>
			      <p dir="rtl" lang="ar">
			      <%= f.text_field :name %>
			    </p>
			    </div>

			    <div class="field">
			    <p dir="rtl" lang="ar">
			      <%= f.label :الصوره %><br>
			      <%= f.text_field :picture %>
			    </p>
			    </div>

			    <div class="actions">
			    <p dir="rtl" lang="ar">
			      <%= f.submit " إنشاء مهنه ", :id => "save_button"%>
			    </p>
			    </div>

			    <% end %>
			</div>
    	</div>
	</div>
</div>