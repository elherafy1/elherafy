<div class="jumbotron">
      <div class="container">
        <div class="row">
          <p>
          <h1 dir="rtl" lang="ar" style = "color:green; font-size:50px;">إضافة مهنه</h1>
          </p>
        	<%= form_for(@job) do |f| %>
          <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2 dir="rtl"> يوجد نقص بالبيانات: <%= pluralize(@job.errors.count, "خطء") %></h2>

        <ul>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li><br>
        <% end %>
        </ul>
      </div>
    <% end %>


  <div class="col-sm-12">

    <div class="field">
    <p dir="rtl" lang="ar">
      <%= f.label :الاسم %><br>
      <%= f.text_field :name %>
    </p>
    </div>

    <div class="field">
    <p dir="rtl" lang="ar">
      <%= f.label :الصوره %><br>
      <%= f.text_field :picture %>
    </p>
    </div>

    <div class="actions">
    <p dir="rtl" lang="ar">
      <%= f.submit " إنشاء مهنه "%>
    </p>
    </div>
      
  </div>

      <% end %>

        </div>
	</div>
</div>