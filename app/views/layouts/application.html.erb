<!DOCTYPE html>
<html>
  
<head>
	<title><%= full_title(yield(:title))%></title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<title>ELherafy</title>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">

			
		<div class="navbar-header">
	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

		<span class="sr-only">Toggle navigation</span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		</button><%= link_to "Home" , root_path , :class => 'navbar-brand' %>
		</div>
		<div class="navbar-collapse collapse">
			<nav>
		<ul class="nav navbar-nav">

			<li><%= link_to "About Us" , '#' %></li>
			<li><%= link_to "Contact Us" , '#' %></li>
			<li id="fat-menu" class="dropdown">
					            <a herf="#" class="dropdown-toggle" data-toggle="dropdown">
						          Services <b class="caret"></b>
					            </a>
					            <ul class="dropdown-menu">
					            	<li><%= link_to "Workers", workers_path %></li>
						            <li><%= link_to "mabalat", mabalat_path(:worker_type => 'mabalat') %> </li>
						            <li><%= link_to "naggar", mabalat_path(:worker_type => 'naggar') %> </li>
						            <li><%= link_to "sabak", mabalat_path(:worker_type => 'sabak') %> </li>
							    </ul>
							    <% if admin_signed_in? %>
							    <li><%= link_to "New worker", new_worker_path %></li>
							    <li><%= link_to "Sign out", destroy_admin_session_path , method: "delete" %></li>
							    <% else %>
							    <li><%= link_to "Sign in AS ADMIN", new_admin_session_path %></li>
							    <% end %>
					        </li>
					    </ul>
	                </nav>
		</ul>
	</div>
</div>
</div>


		<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
	<div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<%= content_tag :div, msg, :id => "flash_#{name}" %>
	</div>
	<% end %>
	<% end %>


<%= yield %>


</body>
</html>
